extends ../layouts/layout.pug

block title
    | BOOKSHOP

block content
    section.main
        .container
            .swiper-container.swiper
                .swiper-wrapper
                    .swiper-slide
                        img(src=require("@/assets/img/banner2.jpg") alt="" loading="lazy")
                    .swiper-slide
                        img(src=require("@/assets/img/banner3.jpg") alt="" loading="lazy")
                .swiper-pagination
                a(href="javascript:").card.card_purple.swiper__card.swiper__card_purple
                    p.card__text Change old book on new
                    img(src=require("@/assets/img/arrow-right.svg") alt="")
                a(href="javascript:").card.card_pink.swiper__card.swiper__card_pink
                    p.card__text top 100 books 2022
                    img(src=require("@/assets/img/arrow-right.svg") alt="")
    section.shop
        .container
            .shop__container


